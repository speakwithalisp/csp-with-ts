{
    "include": ["src"],
    "exclude": ["node_modules"],
    "files": ["src/index.ts",
              "src/impl/interfaces.ts",
              "src/impl/buffers.ts",
              "src/impl/channels.ts",
              "src/impl/constants.ts",
              "src/impl/go.ts",
              "src/impl/instructions.ts",
              "src/impl/process.ts",
              "src/impl/processEvents.ts",
              "src/impl/processQueue.ts",
              "src/impl/scheduler.ts",
              "src/impl/service.ts",
              "src/impl/utils.ts"
             ],
    "compilerOptions": {
        "strict": true,
        "baseUrl": "types",
        "typeRoots": ["types"],
        "types": ["node"],
        "strictNullChecks": true,
        "noImplicitThis": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "target": "es6"
    }
}
